<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bom_wizard" model="ir.ui.view">
        <field name="name">bom.wizard.form</field>
        <field name="model">mrp.bom.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate BOM Report">
                <group>
                    <field name="product_id"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="View Report" type="object" name="view_report_html" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
