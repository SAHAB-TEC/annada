<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="action_print_report_sale_order" model="ir.actions.report">
            <field name="name">Printed Order</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">report_sale_order.sale_template_doc</field>
            <field name="report_file">report_sale_order.sale_template_doc</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">('Invoice - %s' % (object.name))</field>
        </record>
