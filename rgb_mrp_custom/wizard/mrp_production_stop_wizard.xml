<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_production_stop_wizard_form" model="ir.ui.view">
        <field name="name">mrp.production.stop.wizard.form</field>
        <field name="model">mrp.production.stop.wizard</field>
        <field name="arch" type="xml">
            <form string="Stop Timer">
                <group>
                    <field name="stop_reason"/>
                </group>
                <footer>
                    <button name="confirm_stop" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
